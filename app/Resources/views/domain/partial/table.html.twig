<table class="table table-striped table-hover">

    <tr>
        <th>Domain</th>
        <th>Actions</th>
        <th></th>
    </tr>

    {% for itemModel in domains %}
        {% set itemEntity = itemModel.getEntity %}
        <tr>



            <td>
                <a href="{{ path('domain-list', {'domain': itemEntity.domainName}) }}">
                    {{ itemEntity.domainName }}
                </a>
            </td>


            <td>
                <a class="btn btn-xs btn-primary" href="{{ path('domain-list', {'domain': itemEntity.domainName}) }}">
                    Chart
                </a>

            </td>



            <td align="right">
                <a
                    class="btn btn-xs btn-danger"
                    onclick="return domainListDeleteDoubleCheck(this)"
                    href="{{ path('domain-delete', {'domain': itemEntity.domainName}) }}"
                >
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Delete
                </a>
            </td>



        </tr>
    {% endfor %}
</table>



